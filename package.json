{
  "name": "talking-clock-app",
  "version": "1.0.0",
  "main": "dist/lib/index.js",
  "bin": "dist/index.js",
  "repository": "git@github.com:pandasanjay/talking-clock.git",
  "author": "Sanjay <panda.sanjay18@gmail.com>",
  "license": "MIT",
  "scripts": {
    "postinstall": "(yarn build); (cd api && npm install); (cd lib && npm install); (npm link ./lib);",
    "build": "rm -rf lib/dist && babel lib -d lib/dist",
    "start": "npm run build && node ./lib/dist/src/bin/index.js",
    "serve-api": "(cd api && yarn start)",
    "talk": "talking-clock",
    "test": "node --experimental-vm-modules ./node_modules/.bin/jest",
    "lint": "eslint lib api --fix",
    "clean": "rm -rf node_modules dist lib/dist api/node_modules"
  },
  "devDependencies": {
    "@babel/cli": "^7.15.7",
    "@babel/core": "^7.15.8",
    "@babel/node": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "babel-jest": "^27.3.1",
    "cli-clear": "^1.0.4",
    "eslint": "^8.1.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jest": "^25.2.2",
    "esm": "^3.2.25",
    "jest": "^27.3.1"
  },
  "jest": {
    "testEnvironment": "jest-environment-node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "src/core/type/index.js",
      "/dist/"
    ],
    "collectCoverage": true,
    "testPathIgnorePatterns": [
      "/dist/",
      "lib/dist"
    ],
    "transform": {
      "\\.[jt]sx?$": "babel-jest"
    },
    "modulePathIgnorePatterns": [
      "npm-cache",
      ".npm"
    ]
  },
  "dependencies": {
    "express": "^4.17.1"
  }
}
